<nav class="navbar navbar-expand-lg navbar-light bg-light d-flex justify-content-between">
      <a class="navbar-brand" href="/">Simple Airbnb</a>
          <form class="form-inline">
            <input class="form-control mr-sm-2" name="query" type="search" placeholder="Search" aria-label="Search" value="">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
          <a class="btn btn-outline-primary my-2 my-sm-0 ml-2" href="/flats/new">Add Flat</a>
    </nav>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>All our flats (<%= Flat.count %>)</h1>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4 border rounded margin">
        <div class="flat-card-img"></div>
        <div class="flat-card-content">
          <h2><%= flat.name %></h2>
          <p><%= flat.description %></p>
        </div>
        <div class="flat-card-action"></div>
      </div>
    <% end %>
  </div>
</div>

